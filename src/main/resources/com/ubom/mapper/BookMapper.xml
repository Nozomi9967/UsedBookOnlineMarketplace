<mapper namespace="com.ubom.mapper.BookMapper">
    <delete id="deleteById">
        delete
        from t_book
        where id in
        <foreach collection="ids" item="id" separator="," open="(" close=")">
            #{id}
        </foreach>
    </delete>

<!--    根据用户ID删除书籍记录-->
    <delete id="deleteByUserId">
            delete
            from t_book
        <where>
            user_id in
            <foreach collection="ids" item="id" separator="," open="(" close=")">
                #{id}
            </foreach>
        </where>
    </delete>

