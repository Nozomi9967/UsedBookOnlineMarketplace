<!--    根据条件查询-->
    <select id="list" resultType="com.ubom.pojo.Book">
        select *
        from t_book
        <where>
            <if test="searchFactor.bookName != null and searchFactor.bookName!=''">
                and bookname like concat('%', #{searchFactor.bookName}, '%')
            </if>
            <if test="searchFactor.author != null and searchFactor.author!=''">
                and author like concat('%', #{searchFactor.author}, '%')
            </if>
            <if test="searchFactor.bottomPrice != null and searchFactor.topPrice != null and searchFactor.bottomPrice!='' and searchFactor.topPrice!='' ">
                and price between #{searchFactor.bottomPrice} and #{searchFactor.topPrice}
            </if>
            <if test="beginDate!=null and endDate!=null">
                and create_time between #{beginDate} and #{endDate}
            </if>
        </where>
    </select>

    <!-- 更新书籍信息 -->
    <update id="update">
        update t_book
        <set>
            <if test="bookName != null">
                bookname = #{bookName},
            </if>
            <if test="price != null">
                price = #{price},
            </if>
            <if test="author != null">
                author = #{author},
            </if>
            <if test="description != null">
                description = #{description},
            </if>
            <if test="image != null">
                image = #{image},
            </if>
            <if test="userId != null">
                user_id = #{userId},
            </if>
            <if test="createTime != null">
                create_time = #{createTime},
            </if>
            <if test="updateTime != null">
                update_time = #{updateTime},
            </if>
        </set>
        where id = #{id}
    </update>

</mapper>
